                                <?php if ($_item->getParentItem()): ?>
                                    <?php continue; ?>
                                <?php endif; ?>
                                <div class="item">
                                    <div class="image">
                                        <?php echo $block->getImage($_item->getProduct(), 'cart_page_product_thumbnail')->toHtml(); ?>
                                    </div>
