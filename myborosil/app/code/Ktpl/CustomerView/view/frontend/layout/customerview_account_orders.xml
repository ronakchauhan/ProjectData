    <body>
        <referenceBlock name="page.main.title" remove="true" />
        
        <referenceContainer name="content">
        	<block class="Ktpl\CustomerView\Block\Order\Recent" name="customerview_account_recent_orders" template="Ktpl_CustomerView::account/orders/recent.phtml" cacheable="false" />
        	<block class="Ktpl\CustomerView\Block\Order\History" name="customerview_account_order_history" template="Ktpl_CustomerView::account/orders/history.phtml" cacheable="false" />
        </referenceContainer>
    </body>
</page>
