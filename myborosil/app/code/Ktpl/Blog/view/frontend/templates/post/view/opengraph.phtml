<?php
/**
 * Blog post og:tags
 *
 * @var $block \Ktpl\Blog\Block\Post\View\Opengraph
 */
?>

<meta property="og:type" content="<?php echo $block->escapeHtml($block->getType()); ?>" />
<meta property="og:title" content="<?php echo $block->escapeHtml($block->getTitle()); ?>" />
<meta property="og:description" content="<?php echo $block->escapeHtml($block->getDescription()); ?>" />
<meta property="og:url" content="<?php echo $block->escapeHtml($block->getPageUrl()); ?>" />
<?php if ($image = $block->getImage()) { ?>
<meta property="og:image" content="<?php echo $block->escapeHtml($image); ?>" />
<?php } ?>